<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".Login_Page">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/main_logo"
            app:srcCompat="@drawable/ic__0830632741582956833" />




        <EditText
            android:id="@+id/emailIdLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:ems="10"
            android:autofillHints="emailAddress"
            android:hint="@string/email_phone"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="9dp"
            android:textColorHint="#757575"
            android:textColor="@color/black"/>


        <EditText
            android:id="@+id/UserPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"


            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="9dp"
            android:textColorHint="#757575"
            android:autofillHints=""
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/signText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Create New Account"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/sign"
            android:padding="10dp"
            android:text="sing_in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"


            android:orientation="horizontal">

            <Button
                android:id="@+id/googleBtn"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/google"
                android:drawableLeft="@drawable/googleg_standard_color_18"
                android:drawablePadding="2dp"
                android:padding="8dp"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:cornerRadius="9dp" />

            <Button
                android:id="@+id/facebookBbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:drawablePadding="5dp"
                android:layout_marginBottom="2dp"
                android:padding="6dp"

                android:backgroundTint="@color/fbblue"
                android:drawableLeft="@drawable/ic_iconfb"
                android:text="@string/facebook"

                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="9dp"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>